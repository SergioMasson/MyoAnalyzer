<Window x:Class="DynamicPlotWPF.PlotDynamicWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DynamicPlotWPF"
        mc:Ignorable="d"
        xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
        Title="PlotDynamicWindow" Height="Auto" Width="Auto" Loaded="MainWindow_Loaded">
    <Grid>
        <d3:ChartPlotter Name="Signal1" Margin="10,10,10,10" Height="200">
            <d3:ChartPlotter.HorizontalAxis>
                <d3:HorizontalIntegerAxis Name="TimeAxis"/>
            </d3:ChartPlotter.HorizontalAxis>
            <d3:ChartPlotter.VerticalAxis>
                <d3:VerticalIntegerAxis Name="SignalAxis"/>
            </d3:ChartPlotter.VerticalAxis>
            <d3:Header FontFamily="Arial" Content="Mioeletric Signal plot"/>
            <d3:VerticalAxisTitle FontFamily="Arial" Content="Voltage (mV)"/>
            <d3:HorizontalAxisTitle FontFamily="Arial" Content="Time (ms)"/>
        </d3:ChartPlotter>
    </Grid>
</Window>
