<UserControl x:Class="MyoAnalyzer.XAML_blocks.GesturePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyoAnalyzer"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="230">
    <Grid Height="60"  Width="230">
        <TextBlock x:Name="PoseName" HorizontalAlignment="Left" Height="18" Margin="10,20,0,0" TextWrapping="Wrap" Text="Close" VerticalAlignment="Top" Width="38"/>
        <TextBox x:Name="NumberPose1Samples" HorizontalAlignment="Left" Height="19" Margin="53,19,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="21" IsReadOnly="True"/>
        <Button x:Name="LoadPoseData" Content="Load" HorizontalAlignment="Left" Height="30" Margin="79,13,0,0" VerticalAlignment="Top" Width="70" Click="LoadPoseData_Click"/>
        <Button x:Name="CleanData" Content="Clean" HorizontalAlignment="Left" Margin="154,13,0,0" VerticalAlignment="Top" Width="70" Height="30" Click="CleanGestureData_Click"/>
    </Grid>
</UserControl>
